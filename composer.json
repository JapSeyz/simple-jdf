{
  "name": "japseyz/simple-jdf",
  "description": "A package for creating simple JDF messages",
  "type": "library",
  "keywords": ["jdf"],
  "homepage": "https://github.com/japseyz/simple-jdf",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Jesper Jacobsen",
      "email": "japseyz@japseyz.com",
      "homepage": "https://japseyz.com"
    },
    {
      "name": "Joe Pritchard",
      "email": "joe@joe-pritchard.uk",
      "homepage": "https://joe-pritchard.uk"
    }
  ],
  "support": {
    "issues": "https://github.com/japseyz/simple-jdf/issues",
    "source": "https://github.com/japseyz/simple-jdf"
  },
  "require": {
    "php": "^7.4||^8.0",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.2",
    "orchestra/testbench": "^5.3"
  },
  "autoload": {
    "psr-4": {"JapSeyz\\SimpleJDF\\": "src/"}
  },
  "autoload-dev": {
    "psr-4": {
        "JapSeyz\\SimpleJDF\\Tests\\": "tests"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "JapSeyz\\SimpleJDF\\Providers\\ServiceProvider"
      ]
    }
  }
}
